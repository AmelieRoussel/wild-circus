{% extends 'layoutAdmin.html.twig' %}

{% block title %}{{ parent() }} | Modifier une catégorie{% endblock %}
{% block body %}
    <h1 class="text-center mt-4">Modifier une catégorie</h1>
    <div class="container">
        {{ include('admin/category/_form.html.twig', {'button_label': 'Modifier'}) }}
        <div class="row mx-0 d-flex justify-content-center delete">
            {{ include('admin/category/_delete_form.html.twig', {'button_label': 'Supprimer'}) }}
        </div>
        <div class="row mx-0">
            <a class="back text-decoration-none text-dark btn rounded-pill my-4 px-3 py-1"
               href="{{ path('admin_category_index') }}">Retour</a>
        </div>
    </div>
{% endblock %}
