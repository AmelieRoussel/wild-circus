{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('school') }}
{% endblock %}

{% block body %}
    <div class="header mt-0 d-flex align-items-center justify-content-center">
        <h1 class="text-center text-light pt-0">Inscription</h1>
    </div>
    <main class="container pb-5">
        <h2 class="text-center">Inscrire un nouveau membre</h2>
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <div class="col text-center pt-4">
            <button class="button-primary button-enrollment text-decoration-none btn-lg rounded-pill my-4 px-5 py-3">
                Inscrire
            </button>
        </div>
        {{ form_end(form) }}
    </main>
{% endblock %}